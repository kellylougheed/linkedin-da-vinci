{
  "manifest_version": 2,

  "name": "LinkedIn da Vinci",
  "short_name": "da Vinci",
  "description": "Replaces default LinkedIn company and school pictures with prettier versions.",
  "author": "Kelly Lougheed",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["activeTab", "*://*.linkedin.com/*"],
  "browser_action": {
    "default_title": "",
    "default_icon": {
      "19": "icon19.png",
      "38": "icon38.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["script.js"]
    }
  ],
  "web_accessible_resources": [
    "images/*.png"
  ]
}
